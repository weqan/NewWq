@model  List<NewWq.Dto.CommodityDto>

@{
    ViewBag.Title = "网站首页";
}
@section header{
    <link href="~/Content/css/index.css" rel="stylesheet" />
}
<!-- 轮播图 -->
<div id="wq_carousel">
    <div id="carousel-wq" class="carousel slide" data-ride="carousel">
        <!-- Indicators -->
        <ol class="carousel-indicators">
            <li data-target="#carousel-wq" data-slide-to="0" class="active"></li>
            <li data-target="#carousel-wq" data-slide-to="1"></li>
        </ol>

        <!-- Wrapper for slides -->
        <div class="carousel-inner" role="listbox">
            <div class="item active" data-sm-img="/Content/img/m_banner1.jpg" data-lg-img="/Content/img/banner1.jpg">
            </div>
            <div class="item" data-sm-img="/Content/img/m_banner1.jpg" data-lg-img="/Content/img/banner2.jpg">
            </div>
        </div>

        <!-- Controls -->
        <a class="left carousel-control" href="#carousel-wq" role="button" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#carousel-wq" role="button" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>
<!-- /轮播图 -->
<!-- 关于我们 -->
<div id="wq_about" class="hidden-xs hidden-sm">
    <!--标题-->
    <div class="title text-center">
        <h1><strong>关于我们</strong></h1>
        <img class="stars" src="~/Content/img/stars.png" alt="">
    </div>
    <!--主要内容-->
    <div class="container">
        <div class="row">
            <div class="col-md-8 hidden-xs hidden-sm">
                <p class="text-muted">
                    蓝科企业网站系统LankeCMS是采用PHP+MYSQL技术和MVC模式进行开发的，架构清晰，代码易于维护。支持伪静态功能，可生成google和百度地图，支持自定义url、关键字和描述，符合SEO标准。拥有企业网站常用的模块功能(企业简介模块、新闻模块、产品模块、下载模块、图片模块、在线留言、在线订单、友情链接、网站地图等)，强大灵活的后台管理功能，可为企业打造出专业且具有营销力的标准网站。
                </p>
            </div>
            <div class="mainImg col-md-4 hidden-xs hidden-sm">
                <img src="~/Content/img/aboutus.jpg" alt="" class="img-rounded img-responsive">
            </div>
        </div>
    </div>
</div>
<!-- /关于我们 -->
<!-- 产品特色 -->
<section id="wq_product">
    <div class="container">
        <div class="row">

            <!-- 头部选项 -->
            <ul class="nav nav-tabs" role="tablist">
                <li role="presentation" class="active">
                    <a href="#online" aria-controls="online" role="tab"
                       data-toggle="tab">在线大学</a>
                </li>
                <li role="presentation">
                    <a href="#vip" aria-controls="vip" role="tab" data-toggle="tab">会员专享</a>
                </li>
                <li role="presentation">
                    <a href="#video" aria-controls="video" role="tab" data-toggle="tab">优质视频</a>
                </li>
                <li role="presentation">
                    <a href="#vip" aria-controls="vip" role="tab" data-toggle="tab">精品课程</a>
                </li>
                <li class="pull-right hidden-sm hidden-xs">
                    <a href="#settings" aria-controls="settings" role="tab"
                       data-toggle="tab">更多</a>
                </li>
            </ul>

            <!-- 展示的内容 -->
            <div class="tab-content">
                <div role="tabpanel" class="tab-pane fade in active" id="online">
                    <div class="container">
                        <div class="row">
                            <div class="col-md-8 pd-left">
                                <!--第一部分-->
                                <div id="pd_one_1" class="media">
                                    <div class="">
                                        <a href="#">
                                            <img class="media-object" src="~/Content/img/ewm.png" alt="二维码"
                                                 style="width: 140px;">
                                        </a>
                                    </div>
                                    <div class="media-body text-muted" style="padding: 10px;">
                                        <h5 class="media-heading">更多资讯欢迎</h5>
                                        <h5 class="media-heading">访问维千学院</h5>
                                    </div>
                                </div>
                                <!--第二部分-->
                                <ol class="breadcrumb lead" id="pd_one_2">
                                    <li><a href="#">HTML5+全栈</a></li>
                                    <li><a href="#">Python+人工智能</a></li>
                                    <li><a href="#">JavaEE</a></li>
                                    <li><a href="#">Go语言+区块链</a></li>
                                </ol>
                                <!--第三部分-->
                                <h1 id="pd_one_3">
                                    欢迎来到IT人的在线大学&nbsp;&nbsp;
                                    <strong class="text-danger">维千学院</strong>
                                </h1>
                                <!--第四部分-->
                                <div id="pd_one_4">
                                    <button class="btn btn-primary btn-lg" type="submit"
                                            style="margin-right: 20px;">
                                        课程咨询
                                    </button>
                                    <button class="btn btn-default btn-lg" type="submit">了解更多</button>
                                </div>
                            </div>
                            <div class="col-md-4 hidden-xs hidden-sm">
                                <img src="~/Content/img/about_java.png" alt="java" class="img-responsive">
                            </div>
                        </div>
                    </div>
                </div>
                <div role="tabpanel" class="tab-pane fade" id="vip">
                    <div class="container">
                        <div class="row">
                            <div class="col-md-4 hidden-xs hidden-sm">
                                <img src="~/Content/img/about_python.png" alt="python" class="img-responsive">
                            </div>
                            <div class="col-md-8 pd-left">
                                <h1 class="text-warning">维千学院会员</h1>
                                <p class="lead">
                                    撩课学院（itlike.com）目前共开设三个垂直化学科，分别是JavaEE+大数据、HTML5前端+全栈、Python+人工智能，通过线上/线下一体班、撩课学院在线课堂、直播课堂、视频分享等多种方式，以满足全国IT爱好者对学习场景的多样化需求。
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
                <div role="tabpanel" class="tab-pane fade" id="video">
                    <div class="container">
                        <div class="row">
                            <div class="col-md-8 pd-left">
                                <h1>
                                    <strong class="text-danger">案例驱动 体系贯穿 全面系统</strong>
                                </h1>
                                <h3>
                                    10-15分钟的视频
                                    <span class="text-warning">知识点拆分讲解</span>
                                </h3>
                                <h4 class="text-muted">
                                    撩课教育（撩课学院），是一家专注于IT教育培训的机构，旨在为 广大“大学生” 及
                                    “在职人员”群体提供一个网络实体一体化的终身学习教育平台。
                                </h4>
                                <div class="badge" style="padding: 15px; cursor: pointer;">
                                    已更新3000+视频 | 100000+人订阅
                                </div>
                            </div>
                            <div class="col-md-4 hidden-xs hidden-sm">
                                <img src="~/Content/img/about_h5.png" alt="h5" class="img-responsive">
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</section>
<!-- /产品特色 -->
<!-- 热门商品 -->
<div id="wq_hot">
    <!--标题-->
    <div class="title text-center">
        <h1><strong>热门商品</strong></h1>
        <img class="stars" src="~/Content/img/stars.png" alt="">
    </div>
    <!--主要内容-->
    <div class="container">
        <div class="row">

            @{
                foreach (var commodityDto in Model)
                {
                    <div class="col-sm-6 col-md-4 col-lg-3 ">
                        <a href="/Home/Detail?comid=@commodityDto.Id" class="thumbnail">
                            <img src="/@commodityDto.MainImage" alt="@commodityDto.Title">
                            <div class="caption">
                                <h4>@commodityDto.Title.Substring(0,26)</h4>
                            </div>
                        </a>
                    </div>

                }
            }



        </div>
    </div>
</div>
<!-- /热门商品 -->
