@using NewWq.Dto
@model CommodityDto

@{
    ViewBag.Title = "详情页";
    var next = ViewBag.Next;
    var before = ViewBag.Before;
}
@section header{
    <link href="~/Content/css/detail.css" rel="stylesheet" />
}

<!-- 列表头 -->
<div class="list-head">
    <h2>响应式网站模板</h2>
    <p>让你轻松打造属于自己的炫酷网站</p>
</div>
<!-- /列表头 -->
<!--内容-->
<div class="container">
    <div class="row">
        <div class="show-title">
            <h1>@Model.Title</h1>
            <a type="button" class="btn btn-success btn-lg" href="@Model.TaobaoUrl">淘宝链接</a>
            <a type="button" class="btn btn-info btn-lg" href="#">购买模板</a>
        </div>
        <div class="col-xs-12">
            <div class="product_con">
                @Html.Raw(Model.Content)
            </div>
            <div class="point">
                <span class="to-prev col-xs-12 col-sm-6">
                    上一个：
                    @if (before != null)
                    {
                        <a href="/Home/Detail?comid=@before.Id">@before.Title</a>
                    }
                    else
                    {
                        <span>没有了</span>
                    }
                </span>
                <span class="to-next col-xs-12 col-sm-6">
                    下一个：
                    @if (next != null)
                    {
                        <a href="/Home/Detail?comid=@next.Id">@next.Title</a>
                    }
                    else
                    {
                        <span>没有了</span>
                    }
                </span>
            </div>
        </div>
    </div>
</div>

<!--/内容-->
