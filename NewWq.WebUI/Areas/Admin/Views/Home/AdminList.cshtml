@model IEnumerable<NewWq.Dto.UserInformationDto>

@{
}

<h2>用户列表</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ImagePath)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SiteName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FansCount)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FocusCount)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Type)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ImagePath)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SiteName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FansCount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FocusCount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                @Html.ActionLink("编辑", "UserEdit", new { id = item.Id }) |
                @Html.ActionLink("删除", "UserDelete", new { id = item.Id }, new { onclick = "return confirm('确认删除吗？')" })
            </td>
        </tr>
    }

</table>
